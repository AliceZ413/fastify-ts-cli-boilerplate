{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "module": "ES2022",
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"]
}
